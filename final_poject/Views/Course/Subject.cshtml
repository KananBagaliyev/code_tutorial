@model FavoriteSubjectVM
@{
    ViewData["Title"] = "Mövzular";
}
<!-- top front-end courses section starts -->
<section id="subject" class="subject">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-8">
                <div class="title">
                    <h2 class="text-uppercase"><span>@Model.Course.Name</span> kursları</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model.Subjects.Count() == 0)
            {
                <h1>Təəssüf ki, "@Model.Course.Name" üçün mövzu mövcud deyil. Əgər kurs əlavə olunan kimi məqaləni oxumaq istəyirsinizsə aşağıdan abunə ola bilərsiniz.</h1>
            }
            else
            {

                foreach (Subject subject in Model.Subjects)
                {

                    <div class="col-lg-4 col-md-6 course">
                        <div class="course_holder">
                            <div class="course_tools">
                                <a href="">@subject.Course.Name</a>
                            </div>
                            <div class="course_title">
                                <h3>@subject.Name</h3>
                            </div>
                            <div class="course_content">
                                <p>@subject.Definition</p>
                            </div>
                            <a asp-action="Article" asp-controller="Course" asp-route-id="@subject.Id" class="read_more">Ətraflı oxu <i class="fas fa-arrow-right"></i></a>
                            @{int counter = 0;}
                            @if(Model.FavoriteSubjects.Count() != 0) 
                            {
                                foreach(Subject chosen in Model.FavoriteSubjects)
                            {
                                if(chosen.Id == subject.Id) 
                                {
                                    <a class="add_bookmark" asp-action="RemoveFromFavorite" asp-controller="Course" asp-route-id="@subject.Id" asp-route-control="Subject"><i class="fas fa-bookmark"></i></a>
                                    counter = 0;
                                    break;
                                }
                                else
                                {
                                    counter++;
                                }
                            }
                                if (counter != 0) 
                                {
                                    <a class="add_bookmark" asp-action="AddToFavorite" asp-controller="Course" asp-route-id="@subject.Id" asp-route-control="Subject"><i class="far fa-bookmark"></i></a>

                                }
                            }
                            else 
                            {
                                <a class="add_bookmark" asp-action="AddToFavorite" asp-controller="Course" asp-route-id="@subject.Id" asp-route-control="Subject"><i class="far fa-bookmark"></i></a>

                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- top front-end courses section ends -->
<!-- slick sponsors section starts -->
<section id="sponsor">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="sponsor">
                    <h2>Burda sizin reklaminiz ola bilerdi</h2>
                    <h2>Elaqe: +994555555555</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- slick sponsors section Ends -->
<!-- subscribe part starts -->
<section id="subscribe">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="subscribe_header">
                    <h4> Kurslara abunə ola bilərsiniz</h4>
                </div>
            </div>
            <div class="col-md-6">
                <form action="#" method="POST">
                    <input type="email" placeholder="Email daxil edin">
                    <button class="btn" type="submit">Abunə ol</button>
                    <p>Yeni kurs əlavə olunduqda sizə email göndəriləcək.</p>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- subscribe part ends -->

@section Scripts{

    <script src="~/js/slick.min.js"></script>
    <script>

        $('.sponsor').slick({
            dots: false,
            autoplay: true,
            arrows: false,
            slidesToShow: 1,
            lazyLoad: true,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1,
                        infinite: true,
                    }
                },
                {
                    breakpoint: 767,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                },
            ]
        });
    </script>

}