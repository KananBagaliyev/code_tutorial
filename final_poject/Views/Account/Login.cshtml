@model Login
@{ ViewData["Title"] = "Daxil Ol"; }
<section id="forms" class="section-padding">
    <div id="sign_in_form" class="sign_in animated_form" style="margin:0!important;position:relative">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-8 forms">
                    <h2 class="text-center">Daxil Ol</h2>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="form-group">
                            <input asp-for="Username">
                            <label for="">İstifadəçi adı</label>
                            <div class="line"></div>
                        </div>
                        <span class="text-danger" asp-validation-for="Username"></span>
                        <div class="form-group">
                            <input asp-for="Password">
                            <label for="">Şifrə</label>
                            <div class="line"></div>
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                        <button class="btn" type="submit">Daxil ol</button>
                        <div class="form_support" style="width:100%">
                            <div class="checkbox">
                                <input asp-for="isChecked">
                                <label for="">Şifrəni yadda saxla</label>
                            </div>
                            <a asp-action="ForgetPassword" asp-controller="Account">Şifrəni unutmuşam</a>
                        </div>
                    </form>

                    <div class="action_change">
                        <h6>Hesabınız yoxdur? <a id="sign_up" class="special_underline changer" asp-action="Index" asp-controller="Account">Qeydiyyatdan keçin</a></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts{
    <script>document.querySelector("#sign_up").onclick = function () {
            sessionStorage.setItem("page", "sign_up")
        }</script>
}