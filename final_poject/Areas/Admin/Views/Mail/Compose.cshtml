@model SendMessageVM
<div class="container-fluid">
    <!-- Breadcrumb-->
    <div class="row pt-2 pb-2">
        <div class="col-sm-9">
            <h4 class="page-title">Məktub yazmaq</h4>
        </div>
    </div>
    <!-- End Breadcrumb-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <div class="row">

                        <!-- Left sidebar -->
                        <div class="col-lg-3 col-md-4">
                            <a asp-controller="Mail" asp-action="Index" asp-area="Admin" class="btn btn-white btn-block">Məktub qutusuna geri dön</a>
                            <div class="card mt-3 shadow-none">
                                <div class="list-group shadow-none">
                                    @*<a asp-action="Index" asp-controller="Mail" asp-area="Admin" style="background-color:#33698d" class="list-group-item bg-light-dark"><i class="fa fa-inbox mr-2"></i>Gələn məktublar <b>(@Model.Where(c => c.isRead == false).Count())</b></a>
                                    <a asp-action="Trash" asp-controller="Mail" asp-area="Admin" class="list-group-item"><i class="fa fa-trash-o mr-2"></i>Zibil qutusu <b>(@Model.Where(c => c.isDeleted == true).Count())</b></a>*@
                                </div>
                            </div>


                        </div>
                        <!-- End Left sidebar -->
                        <!-- Right Sidebar -->
                        <div class="col-lg-9 col-md-8">

                            <div class="card mt-3 shadow-none">
                                <div class="card-body">
                                    <form method="post">
                                        <div class="form-group">
                                            <input asp-for="@Model.To" id="" class="form-control" placeholder="Kimə">
                                            <span class="text-danger" asp-validation-for="@Model.To"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    @*<input asp-for="CC" class="form-control" placeholder="Cc">*@
                                                    @*<span class="text-danger" asp-validation-for="CC"></span>*@
                                                </div>
                                                <div class="col-md-6">
                                                    @*<input asp-for="BCC" class="form-control" placeholder="Bcc">*@
                                                    @*<span class="text-danger" asp-validation-for="BCC"></span>*@
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="@Model.Subject" class="form-control" placeholder="Mövzu">
                                            <span class="text-danger" asp-validation-for="@Model.Subject"></span>
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control" id="summernoteEditor" asp-for="@Model.Message" placeholder="Məktub" style="height: 200px"></textarea>
                                            <span class="text-danger" asp-validation-for="@Model.Message"></span>
                                        </div>
                                         <button type="submit" class="btn btn-primary waves-effect waves-light m-1"><i class="fa fa-floppy-o mr-1"></i> Göndər</button>
                                        
                                    </form>
                                </div> <!-- card body -->
                            </div> <!-- card -->
                        </div> <!-- end Col-9 -->
                    </div><!-- End row -->
                </div>
            </div>
        </div>
    </div><!-- End row -->
    <!--start overlay-->
    <div class="overlay"></div>
    <!--end overlay-->
</div>

@section Scripts{ 
    <partial name="_Validation"/>

}