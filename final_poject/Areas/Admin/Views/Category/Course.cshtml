@model CategoryVM
    <div class="container-fluid">
        <div class="row pt-2 pb-2">
            <div class="col-sm-6">
                <h4 class="page-title">Kurslar</h4>
            </div>
            <div class="col-sm-6">
                <div class="btn-group float-sm-right">
                    <a asp-action="NewCourse" asp-controller="Category" asp-area="Admin" asp-route-id="@Model.Category.Id" class="btn btn-primary waves-effect waves-light m-1">Yeni Kurs yarat</a>
                    <a asp-action="EditCourse" asp-controller="Category" asp-area="Admin" asp-route-id="@Model.Category.Id" class="btn btn-warning waves-effect waves-light m-1">Mövcud kurslara dəyişiklik et</a>
                </div>
            </div>
        </div>
        <hr />
        <div class="row pt-5 pb-5">
             @if (Model.Courses.Count() == 0)
            {
                <h2>"@Model.Category.Name" kateqoriyası üzrə kurs mövcud deyil. Yuxarıdakı düymədən kurs yarada bilərsiniz.</h2>
             }
             else 
             {
                 
            @foreach (Course course in Model.Courses)
            {
                <div class="col-12 col-lg-4 col-xl-4">
                    <a asp-controller="Category" asp-action="Subject" asp-route-id="@course.Id">
                        <div class="card" style="height:200px">
                            <div class="card-body d-flex justify-content-center align-items-center">
                                <h1 class="text-white text-center">@course.Name.ToUpper()</h1>
                            </div>
                        </div>
                    </a>
                </div>
            }
             }
        </div>
        <a asp-controller="Category" asp-action="Index" asp-area="Admin" class="btn btn-success waves-effect waves-light m-1">Geriyə qayıt</a>
    </div>

@section Scripts{
    
 }