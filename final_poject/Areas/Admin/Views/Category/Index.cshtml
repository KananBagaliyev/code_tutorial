@model IEnumerable<Category>
<div class="container-fluid">
    <div class="row pt-2 pb-2">
        <div class="col-sm-6">
            <h4 class="page-title">Kateqoriyalar</h4>
        </div>
        <div class="col-sm-6">
            <div class="btn-group float-sm-right">
                <a asp-action="NewCategory" asp-controller="Category" class="btn btn-primary waves-effect waves-light m-1">Yeni Kateqoriya yarat</a>
                <a asp-action="EditCategory" asp-controller="Category" asp-area="Admin" id="edit_all" class="btn btn-warning waves-effect waves-light m-1">Mövcud kateqoriyalarda dəyişiklik et</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="row pt-5 pb-5">
        @foreach (Category category in Model)
        {
            <div class="col-12 col-lg-4 col-xl-4">
                <a asp-controller="Category" asp-action="Course" asp-route-id="@category.Id">
                    <div class="card" style="height:200px">
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <h1 class="text-white text-center">@category.Name.ToUpper()</h1>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
