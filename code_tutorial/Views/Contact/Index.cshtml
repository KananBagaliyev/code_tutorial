@model ContactVM
@{
    ViewData["Title"] = "Əlaqə";
}
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12 banner_contact">
                <div class="contact_banner">
                    <img src="~/img/@Model.Greeting.Image" alt="contact-banner">
                </div>
            </div>
            <div class="col-lg-6 col-md-12 text_contact">
                <div class="contact_text">
                    <h1>@Model.Greeting.Header</h1>
                    <p>@Html.Raw(Model.Greeting.Content)</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="contact_form" class="section-padding">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-8">
                <div class="title">
                    <h2 class="text-uppercase">Bizimlə <span>Əlaqə</span> Qurun</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form method="post">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-6">
                            <input asp-for="@Model.Contact.Name" placeholder="Adınız">
                            <span class="text-danger" asp-validation-for="@Model.Contact.Name"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="@Model.Contact.Email" placeholder="Email ünvanınız">
                            <span class="text-danger" asp-validation-for="@Model.Contact.Email"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="@Model.Contact.Subject" placeholder="Mesajın başlığı">
                            <span class="text-danger" asp-validation-for="@Model.Contact.Subject"></span>
                        </div>
                        <div class="col-md-12">
                            <textarea asp-for="@Model.Contact.Message" placeholder="Mesaj"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Contact.Message"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn">MESAJ GÖNDƏR</button>
                </form>

            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_Validation">

}
