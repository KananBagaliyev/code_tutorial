@model Contact
<div class="container-fluid">
    <!-- Breadcrumb-->
    <div class="row pt-2 pb-2">
        <div class="col-sm-9">
            <h4 class="page-title">Mail Read</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javaScript:void();">Dashtreme</a></li>
                <li class="breadcrumb-item"><a href="javaScript:void();">Mail</a></li>
                <li class="breadcrumb-item active" aria-current="page">Mail Read</li>
            </ol>
        </div>
    </div>
    <!-- End Breadcrumb-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <div class="row">
                        <!-- Left sidebar -->
                        <div class="col-lg-3 col-md-4">
                            <div class="card mt-3 shadow-none">
                                <div class="list-groups shadow-none">
                                    <a asp-action="Index" asp-controller="Mail" asp-area="Admin" class="list-group-item bg-light-dark"><i class="fa fa-inbox mr-2"></i>Məktublar</a>
                                    <a asp-action="Trash" asp-controller="Mail" asp-area="Admin" class="list-group-item"><i class="fa fa-trash-o mr-2"></i>Zibil qutusu</a>
                                </div>
                            </div>

                        </div>
                        <!-- End Left sidebar -->
                        <!-- Right Sidebar -->
                        <div class="col-lg-9 col-md-8">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="btn-toolbar" role="toolbar">
                                        <div class="btn-group mr-1">
                                            @if (Model.isDeleted == false)
                                            {
                                                <a asp-action="RestroreActivate" asp-controller="Mail" asp-area="Admin" asp-route-id="@Model.Id" class="btn btn-light waves-effect waves-light"><i class="fa fa-trash-o"></i></a>
                                            }
                                            else
                                            {
                                                <a asp-action="RestroreActivate" asp-controller="Mail" asp-area="Admin" asp-route-id="@Model.Id" class="btn btn-light waves-effect waves-light remove_selected"><i class="fa fa-check"></i></a>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div> <!-- End row -->
                            <div class="card mt-3 shadow-none">
                                <div class="card-body">
                                    <div class="media mb-3">
                                        <div class="media-body">
                                            <span class="media-meta float-right">@Model.SendingDate.ToString("g", CultureInfo.CreateSpecificCulture("es-ES"))</span>
                                            <h4 class="m-0">@Model.Name</h4>
                                            <small>@Model.Email</small>
                                        </div>
                                    </div> <!-- media -->
                                    <p>@Model.Message</p>

                                    <hr>

                                    @if (Model.isDeleted == false)
                                    {
                                        <form class="mt-3" method="post">
                                            <div class="form-group">
                                                <textarea id="message" name="message" class="form-control" rows="9" placeholder="Cavab yazın..."></textarea>
                                            </div>

                                            <div class="text-right">
                                                <button type="submit" class="btn btn-primary waves-effect waves-light mt-3"><i class="fa fa-send mr-1"></i> Göndər</button>
                                            </div>
                                        </form>
                                    }


                                </div>
                            </div> <!-- card -->
                        </div> <!-- end Col-9 -->

                    </div><!-- End row -->

                </div>
            </div>
        </div>
    </div><!-- End row -->
    <!--start overlay-->
    <div class="overlay"></div>
    <!--end overlay-->
</div>