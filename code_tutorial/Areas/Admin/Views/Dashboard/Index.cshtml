@model DashboardVM
    <div class="container-fluid">

        <div class="row mt-3">


            <div class="col-12 col-lg-6 col-xl-6">
                <div class="row">
                    <div class="col-12 col-lg-6 col-xl-6">
                        <div class="card">
                            <div class="card-body">
                                <p>Kurslar</p>
                                <h3>@Model.Courses.Count()</h3>
                                <div id="facebook-pageviews"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 col-xl-6">
                        <div class="card">
                            <div class="card-body">
                                <p>Mövzular</p>
                                <h3>@Model.Subjects.Count()</h3>
                                <div id="bounce-rate"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 col-xl-6">
                        <div class="card">
                            <div class="card-body">
                                <p>Müəllimlər</p>
                                <h3>@Model.Users.Count()</h3>
                                <div id="bounce-rate"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 col-xl-6">
                        <div class="card">
                            <div class="card-body">
                                <p>Abunələr</p>
                                <h3>@Model.Subscribers.Count()</h3>
                                <div id="bounce-rate"></div>
                            </div>
                        </div>
                    </div>
                </div><!--end row-->
            </div>

        </div><!--end row-->

        <!--start overlay-->
        <div class="overlay"></div>
        <!--end overlay-->
    </div>
    <!-- End container-fluid-->