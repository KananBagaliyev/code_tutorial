@model  IEnumerable<UserVM>

@if (Model.Count() == 0)
{
    <h4>Axtarışa uyğun istifadəçi yoxdur</h4>
}

else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Adı (Soyadı)</th>
                    <th scope="col">İstifadəçi adı</th>
                    <th scope="col">Saytda rolu</th>
                    <th scope="col">Düzəliş et</th>
                </tr>
            </thead>
            <tbody>
                @{int count = 1; }
                @foreach (UserVM user in Model)
                {
                    if (User.Identity.Name != user.Username)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@user.Fullname</td>
                            <td>@user.Username</td>
                            <td>@user.userRole</td>
                            <td>
                                <a asp-action="EditUser" asp-controller="Users" asp-area="Admin" asp-route-id="@user.Id" class="btn btn-warning waves-effect waves-light m-1"><i class=" zmdi zmdi-edit"></i></a>
                                <a asp-action="DeleteUser" asp-controller="Users" asp-area="Admin" asp-route-id="@user.Id" class="btn btn-danger waves-effect waves-light m-1 block_user"><i class=" zmdi zmdi-delete"></i></a>
                            </td>
                        </tr>
                        count++;
                    }
                }

            </tbody>
        </table>
    </div>
}